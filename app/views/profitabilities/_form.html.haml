
.row.main-title-wrap
  .col-md-6.col-md-offset-3
    %h1.main-title Start Calculation
.row
  .col-md-6.col-md-offset-3.form-style
    %h3.form-header Start Calculating
    = form_for @profitability, class: "new_profitability", id: "new_profitability" do |f|
      - if @profitability.errors.any?
        #error_explanation
          %h2= "#{pluralize(@profitability.errors.count, "error")} prohibited this profitability from being saved:"
          %ul
            - @profitability.errors.full_messages.each do |msg|
              %li= msg
      %div{style: "margin:0;padding:0;display:inline"}

      = f.label "How much money does your business earn each month-before you pay the bills?"
      = f.text_field :monthly_cash_collection_amount, value: (@saved_profitability ? @saved_profitability.monthly_cash_collection_amount : 15000), class: "text-center form-control", required: true
      
      = f.label "How much are your total monthly bills?"
      = f.text_field :total_monthly_bills, value: (@saved_profitability ? @saved_profitability.total_monthly_bills : 12000), class: "text-center form-control", required: true

      = f.label "How much is your merchant cash advance company collecting daily?"
      = f.text_field :daily_merchant_cash_advance, value: (@saved_profitability ? @saved_profitability.daily_merchant_cash_advance : 252), class: "text-center form-control", required: true

      = f.label "What is your gross profit margin percentage?"
      = f.text_field :gross_profit_margin, value: (@saved_profitability ? @saved_profitability.gross_profit_margin : 20), class: "text-center form-control", required: true
      
      .actions
        = f.submit "GET RESULTS", class: "btn btn-primary btn-lg btn-lg btn-block green-btn"

- if @saved_profitability
  .row.result-box
    .col-md-6.col-md-offset-3.form-style
      is collecting 20% of your average daily deposits.
      %br/
      Your Projected Average Daily Profit Is:
      / .figure{class: ("red" if @saved_profitability.projected_monthly_profit < 0)}
      %h2.text-red= number_to_currency @saved_profitability.projected_monthly_profit, precision: 0
      - if @saved_profitability.projected_monthly_profit < 0
        = link_to "CLICK HERE TO GET A BETTER DEAL", "http://www.buynance.com/get-started/", class: "btn btn-primary btn-lg btn-lg btn-block teal-btn"