#how-works.homepage-wrapper.fluid-row
  .jcarousel
    %ul
      %li
        .how-works
          .how-works-header
            .how-works-header-top
              %span How this Works
            .how-works-header-bottom
              %span Get New Deal
          .how-works-steps
            .how-works-steps-step1
              .how-works-steps-step1-image
                = image_tag("https://res.cloudinary.com/buynance/image/upload/homepage/homepage_how_financed_blue.jpg")        
            .how-works-steps-step2
              .how-works-steps-step2-image
                = image_tag("https://res.cloudinary.com/buynance/image/upload/homepage/homepage_how_financed_green.jpg")        
            .how-works-steps-step3
              .how-works-steps-step3-image
                = image_tag("https://res.cloudinary.com/buynance/image/upload/homepage/homepage_how_financed_orange.jpg")      
          .how-works-information.clearfix
            .how-works-information-step1
              %span Sign Up & Tell Us a Bit About Your Business
            .how-works-information-step2
              %span View Offers
            .how-works-information-step3
              %span Select the One That Works Best For You
      %li
        .how-works
          .how-works-header
            .how-works-header-top
              %span How this Works
            .how-works-header-bottom
              %span ReVise™ Current Deal
          .how-works-steps
            .how-works-steps-step1
              .how-works-steps-step1-image
                = image_tag("https://res.cloudinary.com/buynance/image/upload/homepage/homepage_how_revise_blue.gif")        
            .how-works-steps-step2
              .how-works-steps-step2-image
                = image_tag("https://res.cloudinary.com/buynance/image/upload/homepage/homepage_how_revise_green.gif")        
            .how-works-steps-step3
              .how-works-steps-step3-image
                = image_tag("https://res.cloudinary.com/buynance/image/upload/homepage/homepage_how_revise_orange.gif")        
          .how-works-information
            .how-works-information-step1
              %span We Analyze Your Current Loan
            .how-works-information-step2
              %span Funders Present New Terms
            .how-works-information-step3
              %span Get a Reduced Daily Payment or Interest Rate


  
