    .row.main-title-wrap
      .col-md-6.col-md-offset-3
        %h1.main-title Confirm Account
    .row    
      .col-md-6.col-md-offset-3.form-style
        %h3.form-header Create Your Buynance Password
        - if @business.errors.any?
          %div{class: "alert alert-danger"}
            %ul{style: "list-style: none;"}
              - @business.errors.full_messages.each do |msg|
                %li= msg

        = form_for @business, url: url_for(controller: "businesses", action: "confirm"), class: "confirm_account", id: "confirm_account" do |f|
          = render :partial => "_password_form", :locals => {:f => f}          