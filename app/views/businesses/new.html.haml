.web_body.container 
  #signup-form
    .row.main-title-wrap
      .col-md-6.col-md-offset-3
        %h1.main-title Get Started
    .row    
      .col-md-6.col-md-offset-3.form-style
        %h3.form-header Tell Us About Your Business
        - if @business.errors.any? || @business_user.errors.any?
          %div{class: "alert alert-danger"}
            %ul{style: "list-style: none;"}
              - @business.errors.full_messages.each do |msg|
                %li= msg
              - @business_user.errors.full_messages.each do |msg|
                %li= msg

        = form_for @business, class: "new_profitability", id: "new_profitability" do |f|
          = render :partial => "form", :locals => {:f => f} 
