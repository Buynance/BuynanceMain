.web_body.container 
  #signup-form
    .row.main-title-wrap
      .col-md-6.col-md-offset-3
        %h1.main-title Reset Password
    .row    
      .col-md-6.col-md-offset-3.form-style
        %h3.form-header New Buynance Password
        - if @business.errors.any?
          %div{class: "alert alert-danger"}
            %ul{style: "list-style: none;"}
              - @business.errors.full_messages.each do |msg|
                %li= msg

        = form_for @business, url: {controller: :businesses, action: :reset_password}, class: "recover_account", method: "post", id: "recover_account" do |f|
          = render :partial => "password_form", :locals => {:f => f}