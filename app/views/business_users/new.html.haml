      %li.tab
        %img.icon{alt: "", src: "http://i.imgur.com/LCCJ06E.png"}/
    %form.form
      - if @business.errors.any? || @business_user.errors.any?
        %div{class: "alert alert-danger"}
          %ul{style: "list-style: none;"}
            - @business.errors.full_messages.each do |msg|
              %li= msg
            - @business_user.errors.full_messages.each do |msg|
              - if /[[:upper:]]/.match(msg[0])
                %li= msg

      = simple_form_for @business_user do |f|
        = f.input :email, placeholder: 'Email', html_input: {class: 'textbox'}
        = f.input :password, placeholder: 'Password', html_input: {class: 'textbox'}
        = f.input :password_comfirmation, placeholder: 'Password Comfirmation', html_input: {class: 'textbox'}
        = f.input :term_of_service, as: :check_box