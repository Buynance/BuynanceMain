.web_body
  .paper-section
    .paper-section-header
      Financial History
    .paper-section-top
    .paper-section-body.paper-section-bank-login.row
      .paper-section-bank-login-left.col-xs-7
        .paper-section-bank-login-left-header
          %span Financial Information
        .paper-section-bank-login-form
          = simple_form_for @business, url: wizard_path do |f|
            - if @business.errors.any?
              %div{class: "alert alert-danger"}
                %ul{style: "list-style: none;"}
                  - @business.errors.full_messages.each do |msg|
                    %li= msg
            .paper-section-bank-login-form-label
              %span What is your credit score?
            .paper-section-bank-login-form-input
              = f.input :approximate_credit_score_range, include_blank: 'What is your approximate credit score?', :as => :select, collection: [["450-500" , 1], ["501-550" , 2], ["551-600" , 3], ["601-650" , 4], ["651-700" , 5], ["701-750" , 6], ["751-800" , 7]],   input_html: {class: 'textbox'}, label: false
            .paper-section-bank-login-form-label
              %span Do you have any tax liens?
            .paper-section-bank-login-form-input
              = f.input :is_tax_lien, include_blank: 'Do you have any tax liens?', onchange: "hide_or_show()", :as => :select, collection: [['No',false],['Yes',true]], selected: "",  input_html: {class: 'textbox'}, label: false
            .paper-section-bank-login-form-label
              %span Are you making payments on your tax liens?
            .paper-section-bank-login-form-input
              = f.input :is_payment_plan, include_blank: 'Are you currently making payments on your tax liens? ?', :as => :select, collection: [['No',false],['Yes',true]], selected: "", input_html: {class: 'textbox', id: "is_payment_group"},  label: false
            .paper-section-bank-login-form-label
              %span Have you ever filed for bankruptcy?
            .paper-section-bank-login-form-input
              = f.input :is_ever_bankruptcy, include_blank: 'Have you ever filed for bankruptcy?', :as => :select, collection: [['No',false],['Yes',true]], selected: "",  input_html: {class: 'textbox'}, label: false
            .paper-section-bank-login-form-label
              %span Do you have any judgements?
            .paper-section-bank-login-form-input
              = f.input :is_judgement, include_blank: 'Do you have any judgements?', :as => :select, collection: [['No',false],['Yes',true]], selected: "",  input_html: {class: 'textbox'}, label: false
            .paper-section-bank-login-form-action
              = f.submit "Continue", class: "form-button flat-button button-submit"
      .paper-section-bank-login-right.col-xs-5
        - if @business.is_refinance
          = render "shared/refinance_sidebar"
        - else
          = render "shared/funding_sidebar"