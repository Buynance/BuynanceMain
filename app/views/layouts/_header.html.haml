.homepage-fluid-container{style: "padding-top: 0; padding-bottom: 0;"}
  .homepage-nav
    .homepage-header.homepage-header-container.clearfix
      .hompage-header-logo
        = link_to(image_tag("logo.jpg"), "/")
      .homepage-header-links.clearfix
        .homepage-header-links-section.homepage-header-links-why
          %a{href: '/about'} Why Buynance
        .homepage-header-links-section.homepage-header-links-blog 
          %a{href: "/blog"} Blog
        .homepage-header-links-section.homepage-header-links-phone
          = image_tag("phone_icon.jpg")
          %span 1-800-906-4909
        .homepage-header-links-section.homepage-header-links-email
          = image_tag("mail_icon.jpg")
          %span Email Us
      .homepage-header-actions
        .homepage-header-actions-button
          - if current_business 
            %a.flat-button.homepage-button-left{href: "/logout"}
              %span Logout
          - else
            %a.flat-button.homepage-button-left{href: "/login"}
              %span Login
          .homepage-header-actions-button
          - if current_business 
            %a.flat-button.homepage-button-right{href: "/account"}
              %span Account
          - else
            %a.flat-button.homepage-button-right{href: "/signup"}
              %span Signup