!!!
%html{xmlns: "http://www.w3.org/1999/xhtml"}
  %head
    %title Buynance - Faster, Cheaper, Merchant Cash Advances.
    %link{href: "//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600", rel: "stylesheet", type: "text/css"}/
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    = favicon_link_tag "favicon.ico"
    = render :partial => 'layouts/analytics'
    
  %body
    #header.container-fluid
      #logo.col-sm-4
        .image
          = link_to image_tag("logo.jpg", class: "logo", href: "/"), root_url
      #nav.col-sm-8
        .row-fluid
          %ul
            %li.fight
              - if current_page?(root_url)
                %a{href: "#why"} HOW WE HELP
              - else
                %a{href: "/#why"} HOW WE HELP
            %li.blog
              - if current_page?(root_url)
                %a{href: "/blog"} BLOG
              - else
                %a{href: "/blog"} BLOG
            %li.phone
              = image_tag("phone_icon.jpg")
              1-888-906-4909
            %li.email
              = image_tag("mail_icon.jpg")
              Email Us
            %li.login
              - if current_business_user
                /%button.btn.btn-green{type: "button", onclick: "logout_link()"} 
                /  LOGOUT
                = image_tag("silver_button.jpg")
              - else
                /%button.btn.btn-green{type: "button", href: "#", onclick: "login_link()"} 
                /  LOGIN
                = image_tag("silver_button.jpg")
            %li.signup
              - if current_business_user
                /%button.btn.btn-green{type: "button", onclick: "logout_link()"} 
                /  ACCOUNT
                = image_tag("orange_button.jpg")
              - else
                /%button.btn.btn-green{type: "button", href: "#", onclick: "login_link()"} 
                /  SIGNUP
                = image_tag("orange_button.jpg")
      - render :partial => "layouts/analytics" if Rails.env == "production"
    = yield

    = render :partial => 'layouts/footer'

:javascript
  
  function login_link(){
    window.location = "/login"
  }

  function logout_link(){
    window.location = "/logout"
  }