.web_body
  #signup-form.container 
    .row.main-title-wrap
      .col-md-6.col-md-offset-3
        %h1
    .row    
      .col-md-6.col-md-offset-3.form-style
        %h3.form-header Prior Merchant Cash Advance History
        = form_for @business, url: wizard_path do |f|
          - if @business.errors.any? 
            .error_messages
              %h2
                = pluralize(@business.errors.count, "error") 
                prohibited this business from being saved:
              %ul
                - @business.errors.full_messages.each do |msg|
                  %li 
                    = msg
          %label{class: "control-label", :for => :previous_merchant}
            Are you currently paying back a merchant cash advance?
          = f.select :is_paying_back, options_for_select({"No" => 0, "Yes" => 1}),{}, {:class => "selectpicker"}