.web_body.container 
  #signup-form
    .row.main-title-wrap
      .col-md-6.col-md-offset-3
        %h1
    .row    
      .col-md-6.col-md-offset-3.form-style
        %h3.form-header Tell Us A Bit About You
        - if @business.errors.any?
          %div{class: "alert alert-danger"}
            %ul{style: "list-style: none;"}
              - @business.errors.full_messages.each do |msg|
                %li= msg
        = form_for @business, url: wizard_path do |f|
          %div{class: "form_group #{return_error_class(@business, :owner_first_name)}"}
            %label{class: "control-label", :for => :owner_first_name}
              Your First Name
            = f.text_field :owner_first_name, class: "text-center form-control ", required: true
          %div{class: "form_group #{return_error_class(@business, :owner_last_name)}"}
            %label{class: "control-label", :for => :owner_last_name}
              Your Last Name
            = f.text_field :owner_last_name, class: "text-center form-control ", required: true
          %div{class: "form_group #{return_error_class(@business, :name)}"}
            %label{class: "control-label", :for => :name}
              Business Name
            = f.text_field :name, class: "text-center form-control ", required: true
          %div{class: "form_group #{return_error_class(@business, :phone_number)}"}
            %label{class: "control-label", :for => :phone_number}
              Business Phone Number
            = f.text_field :phone_number, class: "text-center form-control phone_convert", required: true
          %div{class: "form_group #{return_error_class(@business, :street_address_one)}"}
            %label{class: "control-label", :for => :street_address_one}
              Business Address Line One
            = f.text_field :street_address_one, class: "text-center form-control ", required: true
          %div{class: "form_group #{return_error_class(@business, :street_address_two)}"}
            %label{class: "control-label", :for => :street_address_two}
              Business Address Line Two
            = f.text_field :street_address_two, class: "text-center form-control "
          %div{class: "form_group #{return_error_class(@business, :city)}"}
            %label{class: "control-label", :for => :city}
              Business City
            = f.text_field :city, class: "text-center form-control ", required: true
          %div{class: "form_group #{return_error_class(@business, :state)}"}
            %label{class: "control-label", :for => :state}
              Business State
            = f.text_field :state, class: "text-center form-control ", required: true
          %div{class: "form_group #{return_error_class(@business, :business_type)}"}
            %label{class: "control-label", :for => :business_type}
              What do you sell?
            = f.text_field :business_type, class: "text-center form-control ", required: true
          .action
            =f.submit "Continue", class: "btn btn-primary btn-lg btn-lg btn-block green-btn"